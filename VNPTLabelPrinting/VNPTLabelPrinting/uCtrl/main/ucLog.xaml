<UserControl x:Class="VNPTLabelPrinting.uCtrl.ucLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VNPTLabelPrinting.uCtrl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">

    <Grid Margin="5">
        <StackPanel>
            <Label Foreground="Blue" BorderBrush="#777777"  FontSize="15" FontWeight="SemiBold" Content="Vui lòng chọn loại dữ liệu log cần truy vấn:"/>

            <WrapPanel  Margin="0,15,0,0">
                <ComboBox VerticalContentAlignment="Center" Padding="20,0,0,0" Height="30" x:Name="cbb_logtype" FontSize="15" FontWeight="SemiBold" IsEditable="True" Width="300" HorizontalAlignment="Left"/>
                <Button FontWeight="Bold" Height="30" Content="Go" FontSize="15" Margin="10,0,0,0" Width="100" Click="Button_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
    
</UserControl>
